# Enforce consistent line endings across platforms
* text=auto

# Use LF for source and config files
*.ts   text eol=lf
*.tsx  text eol=lf
*.js   text eol=lf
*.jsx  text eol=lf
*.json text eol=lf
*.css  text eol=lf
*.md   text eol=lf
*.yml  text eol=lf
*.yaml text eol=lf
*.sh   text eol=lf

# Use CRLF for Windows scripts
*.bat  text eol=crlf
*.cmd  text eol=crlf
*.ps1  text eol=crlf
