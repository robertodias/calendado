{
  "name": "calendado-functions",
  "version": "1.0.0",
  "description": "Calendado Firebase Functions for waitlist confirmation",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:rules": "jest src/__tests__/rules.test.ts",
    "validate:rules": "ts-node scripts/validate-rules.ts",
    "emulate": "firebase emulators:start --only functions,firestore",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "seed": "ts-node scripts/seed.ts",
    "seed:dry-run": "ts-node scripts/seed-dry-run.ts"
  },
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "@google-cloud/secret-manager": "^6.1.0",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^6.0.0",
    "resend": "^3.2.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^3.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "firebase-functions-test": "^3.1.1",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "@types/uuid": "^9.0.7"
  }
}
